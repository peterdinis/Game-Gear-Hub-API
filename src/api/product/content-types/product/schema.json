{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "platform": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::platform.platform"
    },
    "image": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": true,
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "discount": {
      "type": "integer"
    },
    "isAvaiable": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "summarry": {
      "type": "string"
    },
    "video": {
      "type": "string",
      "required": true
    },
    "cover": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    },
    "screens": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": true,
      "required": true
    },
    "releaseDate": {
      "type": "date",
      "required": true
    }
  }
}
